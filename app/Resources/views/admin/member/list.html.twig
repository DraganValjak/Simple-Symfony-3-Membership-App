{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
 <link href="//cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block title %}
List
{% endblock %}

{% block body %}

<div class="app-header">
	<h1 class="app-title">App, list of mebers page</h1>
	<p class="lead app-description">Member List</p>
</div>
<div class="row">

	<div class="col-lg-12">

     <div class="well with-header">
     
    

		
		
		<table id="tags-table" class="table table-striped table-bordered">
		<thead>
			{# sorting of properties based on query components #}
			<tr>
			<th>Membership number</th>
			<th>Name and surname</th>
			<th>Email</th>
			<th>Tel.</th>
			<th>Valid date</th>
			<th data-sortable="false">&nbsp;</th>
			 </tr>
		</thead>
			{# table body #}
			{% for member in members %}
			<tr>
				<td>{{ member.membershipNumber }}</td>
				<td>{{ member.firstName }} {{ member.lastName }}</td>
				<td>{{ member.email }}</td>
				<td>{{ member.tel }}</td>
				<td>{{ member.validDate|date("F jS \\- Y") }}</td>

				<td><a
					href="{{ path('admin_edit_member', {'id': member.id}) }}"
					class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>
				</td>
			</tr>
			{% endfor %}
		</table>
	

	</div>


</div>

{%  endblock %}

{% block javascripts %}
    {{ parent() }}

   <script src="//cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script>
        $(function(){
            $("#tags-table").DataTable();
            });
    </script>
{% endblock %}